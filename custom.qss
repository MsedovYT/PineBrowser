QPushButton {
    background-color: #f1c40f;
    color: white;
    font-family: Courier New;
    font-size: 11px;
    border-radius: 11px;
    padding: 8px 15px;
}

QPushButton:hover {
    background-color: #3498db;
}

QLineEdit {
    border: 2px solid #3498db;
    border-radius: 7px;
    padding: 5px;
    font-family: Courier New;
    font-size: 10px;
}

QLabel {
    color: #3498db;
    font-family: Verdana;
    font-size: 16px;
}
